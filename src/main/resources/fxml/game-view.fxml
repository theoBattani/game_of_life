<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane minHeight="0.0" minWidth="0.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.theo.GameController">
   <children>
      <Canvas fx:id="canvas" height="154.0" onMouseDragged="#mouseDraggedOnCanvas" onMousePressed="#mousePressedOnCanvas" onMouseReleased="#mouseReleasedOnCanvas" width="200.0" />
      <HBox>
         <children>
            <VBox>
               <children>
                  <Button mnemonicParsing="false" onAction="#onMenu" prefWidth="64.0" text="Menu">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onClear" prefWidth="64.0" text="Clear">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onPlay" prefWidth="64.0" text="|&gt;">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onPause" prefWidth="64.0" text="||">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onNext" prefWidth="64.0" text="-&gt;">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onPrevious" prefWidth="64.0" text="&lt;-">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onExit" prefWidth="64.0" text="Exit">
                     <font>
                        <Font name="Consolas Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</Pane>
